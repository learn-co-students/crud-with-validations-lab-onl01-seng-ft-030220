<h1><%= @song.title %></h1>

<%= link_to("Delete Song", song_path(@song), method: :delete, data: { confirm: 'Are you sure?' }) %>
<%= link_to('Edit Song', edit_song_path(@song)) %>
<%= link_to('Go Back', songs_path) %>

<h3>Released: <%= @song.released %></h3>
<h3>Release Year: <%= @song.release_year %></h3>
<h3>Artist Name: <%= @song.artist_name %></h3>
<h3>Genre: <%= @song.genre %></h3>